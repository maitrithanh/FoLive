<Window x:Class="FoLive.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="FoLive - Livestream 24/7 Manager" 
        Height="800" Width="1200"
        MinHeight="600" MinWidth="1000"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#2D2D30" Padding="15">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="ðŸŽ¥ FoLive" FontSize="24" FontWeight="Bold" Foreground="White" VerticalAlignment="Center"/>
                <TextBlock Text="Livestream 24/7 Manager" FontSize="14" Foreground="#CCCCCC" Margin="10,0,0,0" VerticalAlignment="Center"/>
            </StackPanel>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Streams List -->
            <DataGrid x:Name="StreamsDataGrid" 
                      Grid.Column="0"
                      AutoGenerateColumns="False"
                      IsReadOnly="True"
                      SelectionMode="Single"
                      HeadersVisibility="Column"
                      GridLinesVisibility="All">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Binding="{Binding StreamId}" Width="100"/>
                    <DataGridTextColumn Header="Source" Binding="{Binding Source}" Width="*"/>
                    <DataGridTextColumn Header="Type" Binding="{Binding SourceType}" Width="100"/>
                    <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="100"/>
                    <DataGridTemplateColumn Header="Actions" Width="200">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <Button Content="Start" Click="StartStream_Click" Margin="5,0" Padding="10,5" Tag="{Binding StreamId}"/>
                                    <Button Content="Stop" Click="StopStream_Click" Margin="5,0" Padding="10,5" Tag="{Binding StreamId}"/>
                                    <Button Content="Delete" Click="DeleteStream_Click" Margin="5,0" Padding="10,5" Tag="{Binding StreamId}"/>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>

            <!-- Sidebar -->
            <Border Grid.Column="1" 
                    BorderBrush="#CCCCCC" 
                    BorderThickness="1" 
                    Margin="10,0,0,0"
                    Padding="15"
                    Width="300">
                <StackPanel>
                    <TextBlock Text="Quick Actions" FontSize="18" FontWeight="Bold" Margin="0,0,0,15"/>
                    
                    <Button Content="âž• Add New Stream" 
                            Click="AddStream_Click"
                            Padding="15,10"
                            FontSize="14"
                            Margin="0,0,0,10"/>
                    
                    <Button Content="âš™ï¸ Settings" 
                            Click="Settings_Click"
                            Padding="15,10"
                            FontSize="14"
                            Margin="0,0,0,10"/>
                    
                    <Separator Margin="0,10"/>
                    
                    <TextBlock Text="System Status" FontSize="16" FontWeight="Bold" Margin="0,10,0,10"/>
                    <TextBlock x:Name="FFmpegStatus" Text="FFmpeg: Checking..." Margin="0,5"/>
                    <TextBlock x:Name="StreamsCount" Text="Streams: 0" Margin="0,5"/>
                </StackPanel>
            </Border>
        </Grid>

        <!-- Status Bar -->
        <StatusBar Grid.Row="2" Background="#F0F0F0">
            <StatusBarItem>
                <TextBlock x:Name="StatusText" Text="Ready"/>
            </StatusBarItem>
            <Separator/>
            <StatusBarItem HorizontalAlignment="Right">
                <TextBlock x:Name="TimeText"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>

