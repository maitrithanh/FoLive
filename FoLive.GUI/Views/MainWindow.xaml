<Window x:Class="FoLive.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="FoLive - Quản lý Stream" 
        Height="600" Width="1000"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Menu Grid.Row="0">
            <MenuItem Header="Tệp">
                <MenuItem Header="Thêm Stream" Click="AddStream_Click"/>
                <Separator/>
                <MenuItem Header="Thoát" Click="Exit_Click"/>
            </MenuItem>
            <MenuItem Header="Trợ giúp">
                <MenuItem Header="Giới thiệu" Click="About_Click"/>
            </MenuItem>
        </Menu>

        <Grid Grid.Row="1" Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                <Button Content="Thêm Stream" Click="AddStream_Click" Padding="10,5" Margin="0,0,10,0"/>
                <Button Content="Bắt đầu tất cả" Click="StartAll_Click" Padding="10,5" Margin="0,0,10,0"/>
                <Button Content="Dừng tất cả" Click="StopAll_Click" Padding="10,5"/>
            </StackPanel>

            <DataGrid x:Name="StreamsDataGrid" Grid.Row="1" 
                      AutoGenerateColumns="False"
                      CanUserAddRows="False"
                      CanUserDeleteRows="False"
                      SelectionMode="Single">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Binding="{Binding StreamId}" Width="100"/>
                    <DataGridTextColumn Header="Loại nguồn" Binding="{Binding SourceDisplay}" Width="150"/>
                    <DataGridTextColumn Header="Nguồn" Binding="{Binding Stream.Source}" Width="*"/>
                    <DataGridTextColumn Header="Trạng thái" Binding="{Binding StatusDisplay}" Width="150">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="Foreground" Value="{Binding StatusColor}"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                    <DataGridTemplateColumn Header="Thao tác" Width="300">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <Button Content="Sửa" Click="EditStream_Click" Padding="5,2" Margin="2"/>
                                    <Button Content="Xóa" Click="DeleteStream_Click" Padding="5,2" Margin="2"/>
                                    <Button Content="Bắt đầu" Click="StartStream_Click" Padding="5,2" Margin="2"/>
                                    <Button Content="Dừng" Click="StopStream_Click" Padding="5,2" Margin="2"/>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>

        <StatusBar Grid.Row="2">
            <StatusBarItem>
                <TextBlock x:Name="StatusTextBlock" Text="Sẵn sàng"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>
