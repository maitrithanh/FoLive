<Window x:Class="FoLive.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ﾄ斉ハg nh蘯ｭp - FoLive" 
        Height="450" Width="400"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="White">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#0078D4" Padding="20,25">
            <StackPanel>
                <TextBlock Text="沐 ﾄ斉ハg nh蘯ｭp" 
                          FontSize="24" 
                          FontWeight="Bold" 
                          Foreground="White"
                          HorizontalAlignment="Center"/>
                <TextBlock Text="FoLive Stream Pro" 
                          FontSize="14" 
                          Foreground="#E0E0E0"
                          HorizontalAlignment="Center"
                          Margin="0,5,0,0"/>
            </StackPanel>
        </Border>

        <!-- Login Form -->
        <StackPanel Grid.Row="1" 
                   Margin="40,30"
                   VerticalAlignment="Center">
            <StackPanel Margin="0,0,0,20">
                <TextBlock Text="Tﾃｪn ﾄ惰ハg nh蘯ｭp ho蘯ｷc Email *" 
                          FontSize="12" 
                          FontWeight="SemiBold" 
                          Margin="0,0,0,8"/>
                <TextBox x:Name="UsernameTextBox" 
                        Padding="12,10" 
                        FontSize="14"
                        Text=""
                        KeyDown="UsernameTextBox_KeyDown"/>
            </StackPanel>

            <StackPanel Margin="0,0,0,25">
                <TextBlock Text="M蘯ｭt kh蘯ｩu *" 
                          FontSize="12" 
                          FontWeight="SemiBold" 
                          Margin="0,0,0,8"/>
                <PasswordBox x:Name="PasswordBox" 
                            Padding="12,10" 
                            FontSize="14"
                            KeyDown="PasswordBox_KeyDown"/>
            </StackPanel>

            <Button Content="ﾄ斉ハg nh蘯ｭp" 
                   Click="Login_Click"
                   Background="#0078D4"
                   Foreground="White"
                   FontSize="16"
                   FontWeight="Bold"
                   Padding="20,12"
                   BorderThickness="0"
                   Cursor="Hand"
                   Margin="0,0,0,15">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>

            <TextBlock x:Name="ErrorMessageText" 
                      Text="" 
                      Foreground="#DC3545"
                      FontSize="12"
                      TextWrapping="Wrap"
                      Visibility="Collapsed"
                      Margin="0,0,0,15"/>

            <Separator Margin="0,0,0,15"/>

            <TextBlock Text="Chﾆｰa cﾃｳ tﾃi kho蘯｣n? " 
                      FontSize="12" 
                      Foreground="#666"
                      HorizontalAlignment="Center">
                <Run Text="ﾄ斉ハg kﾃｽ ngay" 
                     Foreground="#0078D4"
                     Cursor="Hand"
                     MouseLeftButtonDown="Register_Click"
                     TextDecorations="Underline"/>
            </TextBlock>

            <TextBlock Text="Quﾃｪn m蘯ｭt kh蘯ｩu?" 
                      FontSize="12" 
                      Foreground="#0078D4"
                      HorizontalAlignment="Center"
                      Margin="0,10,0,0"
                      Cursor="Hand"
                      MouseLeftButtonDown="ForgotPassword_Click"
                      TextDecorations="Underline"/>
        </StackPanel>
    </Grid>
</Window>


